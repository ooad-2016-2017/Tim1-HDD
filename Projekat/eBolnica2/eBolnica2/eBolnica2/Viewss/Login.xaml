<Page
    x:Class="eBolnica2.Viewss.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:eBolnica2.Viewss"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width ="200" Height="200">
      
           <StackPanel>
                    <TextBlock FontSize="18.5" >
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{ThemeResource SystemBaseMediumColor}"></SolidColorBrush>
                        </TextBlock.Foreground>
                Prijava na sistem
                    </TextBlock>
                    <TextBox Name="txtUsername" PlaceholderText="Username" Margin="10,10,10,0" Width="150" Text="{Binding txtUser,Mode=TwoWay}"/>
                    <PasswordBox Name="txtPassword"  PlaceholderText="Password" Margin="10,10,10,0" Width="150" Password="{Binding txtPass,Mode=TwoWay}"/>
                    <Button Name="btnLogin" Margin="30,10,0,0" Content="Login" Command="{Binding Path=btnClick}" />
        </StackPanel>
           

    </Grid>
</Page>
